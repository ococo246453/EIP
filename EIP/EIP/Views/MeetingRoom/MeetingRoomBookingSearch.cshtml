                            <option value="13">15:30</option>
                            <option value="14">16:00</option>
                            <option value="15">16:30</option>
                            <option value="16">17:00</option>
                            <option value="17">17:30</option>
                            <option value="18">18:00</option>
                        </select>
                    </div>
                </div>
                <div class="mx-auto mt-3 col-12 col-sm-6 col-md-4 col-lg-2">
                    <div class="mt-5">
                        <div class="form-group">
                            <input type="button" class="btn btn-primary w-100 AddEMP shadow-sm" value="確認送出" />
                            <input type="reset" class="resetform" hidden />
                        </div>
                    </div>
                </div>
            </div>
        </form>
        @*------------------------------預約會議室結束------------------------------*@
    </div>
</div>
@*nav-Show*@
<div class="tab-pane fade" id="nav-Show">
    <div class="overflow-auto">
        @*-------------------------------預約會議室總表起始------------------------------*@
        <table class="table text-dark bg-white table-hover text-nowrap table-borderless TotalWrap">
            <thead>
                <tr>
                    <th class="">員工編號</th>
                    <th class="">中文姓名</th>
