                    <div class="form-group">
                        <label>中文姓名 : </label>
                        <input type="text" readonly class="addpart form-control shadow-sm" />  @*loading*@
                    </div>
                    <div class="form-group">
                        <label>使用時間：</label>
                        @*<input type="text" class="addMTime form-control shadow-sm" />*@
