@{
    ViewBag.Title = "MeetingRoomBookingSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*------------------------------搜尋框起始------------------------------*@
<div class="mt-5 d-flex justify-content-center align-items-center">
    <div>
        <input type="search" name="MeetingRoomsearchbox" class="searchbox rounded-pill border-info pl-3 Regular shadow" placeholder="搜尋會議室預約資料..." />
    </div>
    <div class="ml-3">
        <button class="btn btn-primary rounded-pill searchbtn Regular shadow"><i class="fa fa-search mr-2"></i>搜尋</button>
    </div>
</div>
@*searchid-Meetingsearchinfo*@ @*tab-index*@
<div class="modal fade bd-example-modal-xl" id="Meetingsearchinfo" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title FormTextShadow">會議室預約搜尋結果</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="w-100" >
                    <thead class="w-100 h-100">
                        @*List*@
                        <tr>
                            <th class="pl-2">員工編號</th>
                            <th class="">中文姓名</th>
                            <th class="">使用日期</th>
                            <th class="">使用時間</th>
                            <th class="">結束時間</th>
                            <th class="">會議室名稱</th>
                            <th>編輯</th>
                            <th>刪除</th>
                        </tr>
                    </thead>
                    <tbody class="SearchShowTable w-100 h-100">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@*------------------------------搜尋框結束------------------------------*@


@*------------------------------TAB分頁標籤起始------------------------------*@

<nav class="mt-5 navtitle ">

</nav>
@*------------------------------TAB分頁標籤結束------------------------------*@

@*------------------------------預約會議室起始------------------------------*@

@*formid="AddEMPForm" ->"AddMRForm"*@

<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active w-100 h-100 TotalWrap" id="nav-Add">
        <form id="AddMRForm" enctype="multipart/form-data">
            <div class="d-flex justify-content-center flex-wrap">
                <div class="mx-auto mt-3 col-12 col-sm-6 col-md-4 col-lg-2">
                    <div class="form-group">
                        <input type="hidden" class="addempid" />
                        <label class="">員工編號 : </label>
                        <input type="text" readonly class="addemail form-control shadow-sm" /> @*loading*@
                    </div>
                    <div class="form-group">
                        <label>使用日期 : </label>
                        <input type="text" class="addbook form-control shadow-sm" />
                    </div>
                    <div class="form-group">
                        <label>會議室名稱：</label>
                        <select class="addjob form-control shadow-sm">
                            @*<option value="601" hidden>601 會議室</option>*@
